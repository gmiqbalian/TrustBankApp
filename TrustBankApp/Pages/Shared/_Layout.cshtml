<body>

    <!-- ======= Header ======= -->


    <header id="header" class="header d-flex align-items-center">

        <div class="container-fluid container-xl d-flex align-items-center justify-content-between">
            <a asp-page="/Index" class="logo d-flex align-items-center">
                <h1>Trust Bank<span>.</span></h1>
            </a>
            <nav id="navbar" class="navbar align-self-start">
                <ul>
                    <li><a asp-page="/Index">Home</a></li>
                    @if (User.IsInRole("Cashier"))
                    {
                        <li>
                            <a asp-page="/Customers/Customers">Customers</a>
                        </li>
                        <li>
                            <a asp-page="/Accounts/Accounts">Accounts</a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-page="/Users/Users">
                                <i class="fa-solid fa-users"></i>
                                &nbsp;Users
                            </a>
                        </li>
                        <li>
                            <a asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>
                    }
                    <li>
                        <partial name="_LoginPartial" />
                    </li>
                </ul>
            </nav><!-- .navbar -->

            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>
    </header><!-- End Header -->
    <!-- End Header -->
    
    @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer" style="position:-ms-page; bottom:0">
        <div class="container mt-4">
            <div class="copyright">
                &copy; Copyright <strong><span>Trust Bank 2023</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                Designed by Ghazanfar Mahmood
            </div>
        </div>

    </footer><!-- End Footer -->
    <!-- End Footer -->

    <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <div id="preloader"></div>

    <!-- Toastr JS Files -->
    @*<script src="~//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>*@

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js"></script>

    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>

