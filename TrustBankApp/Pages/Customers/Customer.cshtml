@page
@model TrustBankApp.Pages.CustomerModel
@{
}

<div class="container min-vh-100 mt-5 pt-5">

    <div class="main-body">

        <h1 class="mt-5 mb-3">Customer Detail</h1>

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3 bg-dark rounded">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">

                            <div class="mt-3 d-flex flex-column gap-3">
                                <div class="row-cols-sm-6">
                                    <img class="row-cols-sm-6" src="/assets/img/sweden.png" />
                                </div>
                                <h4 class="fs-1 text-wrap">@Model.Customer.FullName</h4>
                                <h4 class="fs-3 text-success">Customer Id</h4>
                                <h4 class="fs-4 text-light">@Model.Customer.CustomerId</h4>
                                <h4 class="fs-3 text-success">Social Security</h4>
                                <h4 class="fs-4 text-light">@Model.Customer.NationalId</h4>
                                <p class="text-secondary mb-1"></p>
                                <button class="btn btn-primary" asp-page="/Customers/Customers">
                                    <i class="fa-solid fa-arrow-left fa-lg"></i>
                                    BACK
                                </button>
                                <button class="btn btn-outline-warning border">
                                    <a asp-page="/Customers/EditCustomer"
                                       asp-route-customerId="@Model.Customer.CustomerId">
                                        <i class="fas fa-edit fa-lg"></i>
                                        EDIT
                                    </a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3 bg-dark rounded">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Gender
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                    @Model.Customer.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                        @Model.Customer.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Birthday</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                            @Model.Customer.Birthday
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                                @Model.Customer.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">City</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                                    @Model.Customer.City
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Country</h6>
                            </div>
                            <div class="d-flex gap-5 col-sm-9 text-secondary">
                                                        @Model.Customer.Country
                            </div>
                        </div>
                        <hr>
                        <p class="text-muted fs-2 text-center">
                            Account Details

                            <div class="row">

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Account Id</h6>
                                </div>
                                <div class="col-sm-9 fs-3 text-warning">
                                                                @Model.Customer.AccountId
                                </div>
                            </div>
                            <hr>
                            <div class="row">

                                <div class="col-sm-3">
                                    <h6 class="mb-0">Account Balance</h6>
                                </div>
                                <div class="col-sm-9 text-secondary fs-3 text-warning">
                                                                @Model.Customer.TotalBalance kr
                                </div>
                            </div>
                            <hr>


                            <div class="row">
                                <div class="col-sm-12 d-flex justify-content-center gap-2 ">
                                    <a class="btn btn-info">Transactions</a>
                                    <a class="btn btn-info">Deposit</a>
                                    <a class="btn btn-info">Withdrawl</a>
                                    <a class="btn btn-info">Transfer</a>
                                </div>
                            </div>


                    </div>
                </div>
            </div>
        </div>

    </div>

</div>