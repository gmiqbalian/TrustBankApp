@page
@model TrustBankApp.Pages.CustomerModel
@{
}


<div class="container min-vh-100 mt-5 pt-5">

    <div class="main-body">

        <h1 class="mt-5">Customer Detail</h1>

        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card bg-dark rounded">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">

                            <div class="mt-3 d-flex flex-column gap-lg-3">
                                @*<div class="row-cols-sm-6">
                                    <img class="row-cols-sm-6" src="/assets/img/sweden.png" />
                                </div>*@
                                <h3 class="fs-1 m-0 text-wrap">@Model.Customer.FullName</h3>
                                <h3 class="fs-3 m-0 text-success">Customer Id</h3>
                                <h3 class="fs-4 m-0 text-light">@Model.Customer.CustomerId</h3>
                                <h3 class="fs-3 m-0 text-success">Social Security</h3>
                                <h3 class="fs-4 m-0 text-light">@Model.Customer.NationalId</h3>
                                <p class="text-secondary mb-1"></p>
                                <a class="btn btn-primary"
                                        asp-page="/Customers/Customers">
                                    <i class="fa-solid fa-arrow-left fa-lg"></i>
                                    BACK
                                </a>
                                <a class="btn btn-outline-warning border"
                                        asp-page="/Customers/EditCustomer"
                                        asp-route-customerId="@Model.Customer.CustomerId">
                                    <i class="fas fa-edit fa-lg"></i>
                                    EDIT
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3 bg-dark rounded">
                    <div class="card-body">
                        <h5 class="text-warning fs-2">
                            Customer Details
                        </h5>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Gender
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Emailaddress
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Birthday</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Birthday
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">City</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Customer.City
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Country</h6>
                            </div>
                            <div class="d-flex gap-5 col-sm-9 text-secondary">
                                @Model.Customer.Country
                            </div>
                        </div>
                        <hr>
                        <h5 class="text-warning fs-2">
                            Account Details
                        </h5>

                        <div class="row">

                            <div class="col-sm-3">
                                <h6 class="mb-0">Account Id</h6>
                            </div>
                            <div class="col-sm-9 text-warning">
                                @Model.Customer.AccountId
                            </div>
                        </div>
                        <hr>
                        <div class="row">

                            <div class="col-sm-3">
                                <h6 class="mb-0">Account Balance</h6>
                            </div>
                            <div class="col-sm-9 text-secondary text-warning">
                                @Model.Customer.TotalBalance kr
                            </div>
                        </div>
                        <hr>


                        <div class="row">
                            <div class="col-sm-12 d-flex justify-content-center gap-2 ">
                                <a class="btn btn-info"
                                   asp-page="/Accounts/Transactions"
                                   asp-route-accountId="@Model.Customer.AccountId">Transactions</a>
                                <a class="btn btn-info"
                                   asp-page="/Accounts/Deposit"
                                   asp-route-customerId="@Model.Customer.CustomerId"
                                   asp-route-accountId="@Model.Customer.AccountId">Deposit</a>
                                <a class="btn btn-info"
                                   asp-page="/Accounts/Withdrawl"
                                   asp-route-customerId="@Model.Customer.CustomerId"
                                   asp-route-accountId="@Model.Customer.AccountId">Withdraw</a>
                                <a class="btn btn-info"
                                   asp-page="/Accounts/Transfer"
                                   asp-route-customerId="@Model.Customer.CustomerId"
                                   asp-route-accountId="@Model.Customer.AccountId">Transfer</a>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </div>

</div>