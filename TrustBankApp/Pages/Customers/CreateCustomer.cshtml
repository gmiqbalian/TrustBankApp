@page
@model TrustBankApp.Pages.Customers.CreateCustomerModel
@{
}
@{
    ViewData["Title"] = "Create a New Customer";
}

<div class="container min-vh-100 mt-5 pt-5 d-flex flex-column justify-content-center">
    <div class="row d-flex justify-content-center border rounded-2 w-75 m-5 p-5 vh-100 w-100 bg-dark">
        <h1 class="text-light fs-1 text-center">Create a New Customer</h1>
        <form method="post" class="row g-2 text-light fs-6">
            <div class="col-md-6">
                <label for="firstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="firstName"
                        asp-for="@Model.NewCustomerViewModel.GivenName">
            </div>
            <div class="col-md-6">
                <label for="lastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="lastName"
                       asp-for="@Model.NewCustomerViewModel.SurName">
            </div>
            <div class="col-md-3">
                <label for="dateOfBirth" class="form-label">Date of Birth</label>
                <input type="text" class="form-control" id="dateOfBirth"
                       asp-for="@Model.NewCustomerViewModel.Birthday">
            </div>
            <div class="col-md-2">
                <label for="gender" class="form-label">Gender</label>
                <input type="text" class="form-control" id="gender"
                       asp-for="@Model.NewCustomerViewModel.Gender">
            </div>
            <div class="col-md-3">
                <label for="socialSecurity" class="form-label">Social Security</label>
                <input type="text" class="form-control" id="socialSecurity"
                       asp-for="@Model.NewCustomerViewModel.NationalId">
            </div>
            <div class="col-md-4">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputEmail"
                       asp-for="@Model.NewCustomerViewModel.Email">
            </div>
            
            <div class="col-6">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St"
                       asp-for="@Model.NewCustomerViewModel.StreetAddress">
            </div>
            <div class="col-md-2">
                <label for="telephoneNumber" class="form-label">Tel Country Code</label>
                <input type="text" class="form-control" id="telephoneNumber" placeholder="123"
                       asp-for="@Model.NewCustomerViewModel.TelephoneCountryCode">
            </div>
            <div class="col-md-4">
                <label for="telephoneNumber" class="form-label">Telephone Number</label>
                <input type="text" class="form-control" id="telephoneNumber" placeholder="1234 56 78"
                       asp-for="@Model.NewCustomerViewModel.TelephoneNumber">
            </div>
            <div class="col-md-4">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="inputCity"
                       asp-for="@Model.NewCustomerViewModel.City">
            </div>
            <div class="col-md-2">
                <label for="inputZip" class="form-label">Zip</label>
                <input type="text" class="form-control" id="inputZip"
                       asp-for="@Model.NewCustomerViewModel.ZipCode">
            </div>
            <div class="col-md-2">
                <label for="country" class="form-label">Country</label>
                <input type="text" class="form-control" id="country"
                       asp-for="@Model.NewCustomerViewModel.Country">
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save"></i>Save</button>
                <button class="btn btn-primary">
                    <a class="text-light" asp-page="/Customers/Customers">
                        <i class="fa-solid fa-arrow-left"></i>Back
                    </a>
                </button>
            </div>
            
        </form>

    </div>

</div>