@page
@model TrustBankApp.Pages.Customers.CreateCustomerModel
@{
}
@{
    ViewData["Title"] = "Create a New Customer";
    var successMessage = ViewData["successMessage"]?.ToString();
}


<div class="container mt-5 pt-5">
    <div class="container mt-5 p-5 bg-dark text-light rounded-2" style="margin-bottom: 150px">
        <h1 class="pb-5 fs-1 fw-bolder">Create a <span class="text-success">NEW</span> Customer</h1>
        @if (!string.IsNullOrWhiteSpace(successMessage))
        {
            <div class="alert alert-success" role="alert">
                @successMessage
            </div>
        }
        <form class="" style="padding-left: 20px" method="post">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="row col-12">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.GivenName" 
                                class="form-label">
                                First Name
                            </label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.NewCustomerViewModel.GivenName">
                            <span asp-validation-for="@Model.NewCustomerViewModel.GivenName"></span>
                        </div>
                        <div class="mb-3 col-12">
                            <label for="exampleInputPassword1" class="form-label">Last Name</label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.NewCustomerViewModel.SurName">
                            <span asp-validation-for="@Model.NewCustomerViewModel.SurName"></span>
                        </div>
                    </div>

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.NationalId"
                                   class="form-label">
                                Social Security
                            </label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                   asp-for="@Model.NewCustomerViewModel.NationalId"
                                   aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.Gender"
                                   class="form-label">Gender</label>
                            <select type="text" class="form-control text-dark" id="gender"
                                    asp-for="@Model.NewCustomerViewModel.Gender"
                                    asp-items="@Model.NewCustomerViewModel.GendersDropDownList">
                            </select>
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.Birthday" class="form-label">Birthday</label>
                            <input type="date" class="form-control" id="dateOfBirth"
                                   asp-for="@Model.NewCustomerViewModel.Birthday">
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.StreetAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" placeholder="1234 Main St"
                                   asp-for="@Model.NewCustomerViewModel.StreetAddress">
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.City"
                                   class="form-label">City</label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.NewCustomerViewModel.City">
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.Country" class="form-label">Country</label>
                            <Select type="text" class="form-control"
                                    asp-for="@Model.NewCustomerViewModel.Country"
                                    asp-items="@Model.NewCustomerViewModel.CountriesDropDownList">
                            </Select>
                        </div>
                        <div class="mb-3 col-12 col-lg-6">
                            <label asp-for="@Model.NewCustomerViewModel.ZipCode" class="form-label">Zip</label>
                            <input type="text" class="form-control" placeholder="000 00"
                                   asp-for="@Model.NewCustomerViewModel.ZipCode">
                        </div>
                        <div class="mb-3 col-12 col-lg-6">
                            <label asp-for="@Model.NewCustomerViewModel.TelephoneNumber" class="form-label">Tel Number</label>
                            <input type="text" class="form-control" placeholder="1234 56 78"
                                   asp-for="@Model.NewCustomerViewModel.TelephoneNumber">
                        </div>
                    </div>

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.NewCustomerViewModel.Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail"
                                   asp-for="@Model.NewCustomerViewModel.Email">
                        </div>
                    </div>
                </div>

            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save"></i>
                Save
            </button>
            <button class="btn btn-primary" asp-page="/Customers/Customers">
                <i class="fa-solid fa-arrow-left"></i>
                Back
            </button>
        </form>
    </div>
</div>


@section scripts { <partial name="_ValidationScriptsPartial" /> }