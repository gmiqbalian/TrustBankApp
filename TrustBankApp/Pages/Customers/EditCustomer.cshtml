@page
@model TrustBankApp.Pages.Customers.EditCustomerModel
@{
}


<div class="container mt-5 pt-5">
    <div class="container mt-5 p-5 box-theme text-light rounded-2" style="margin-bottom: 150px">
        <h1 class="pb-5 fs-1 fw-bolder"><span class="text-warning">EDIT</span> CURRENT CUSTOMER</h1>
        <h3></h3>
        <form class="" style="padding-left: 20px" method="post">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="row col-12">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.GivenName"
                                   class="form-label">
                                First Name
                            </label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.EditCustomerVM.GivenName">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.GivenName"></span>
                        </div>
                        <div class="mb-3 col-12">
                            <label for="exampleInputPassword1" class="form-label">Last Name</label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.EditCustomerVM.SurName">
                            <span class="text-danger" asp-validation-for="@Model.EditCustomerVM.SurName"></span>
                        </div>
                    </div>

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.NationalId"
                                   class="form-label">
                                Social Security
                            </label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.EditCustomerVM.NationalId">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.NationalId"></span>
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.Gender"
                                   class="form-label">Gender</label>
                            <select type="text" class="form-control text-dark"
                                    asp-for="@Model.EditCustomerVM.Gender"
                                    asp-items="@Model.EditCustomerVM.GendersDropDownList">
                            </select>
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.Gender"></span>
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.Birthday" class="form-label">Birthday</label>
                            <input type="date" class="form-control" id="dateOfBirth"
                                   asp-for="@Model.EditCustomerVM.Birthday">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.Birthday"></span>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.StreetAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" placeholder="1234 Main St"
                                   asp-for="@Model.EditCustomerVM.StreetAddress">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.StreetAddress"></span>
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.City"
                                   class="form-label">City</label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.EditCustomerVM.City">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.City"></span>
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.Country" class="form-label">Country</label>
                            <Select type="text" class="form-control"
                                    asp-for="@Model.EditCustomerVM.Country"
                                    asp-items="@Model.EditCustomerVM.CountriesDropDownList">
                            </Select>
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.Country"></span>
                        </div>
                        <div class="mb-3 col-12 col-lg-6">
                            <label asp-for="@Model.EditCustomerVM.ZipCode" class="form-label">Zip (without space)</label>
                            <input type="text" class="form-control" placeholder="3-5 digits"
                                   asp-for="@Model.EditCustomerVM.ZipCode">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.ZipCode"></span>
                        </div>
                        <div class="mb-3 col-12 col-lg-6">
                            <label asp-for="@Model.EditCustomerVM.TelephoneNumber" class="form-label">Tel Number</label>
                            <input type="text" class="form-control" placeholder="1234 56 78"
                                   asp-for="@Model.EditCustomerVM.TelephoneNumber">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.TelephoneNumber"></span>
                        </div>
                    </div>

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerVM.EmailAddress" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail"
                                   asp-for="@Model.EditCustomerVM.EmailAddress">
                            <span class="text-danger"
                                  asp-validation-for="@Model.EditCustomerVM.EmailAddress"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-column flex-lg-row align-items-center justify-content-center gap-3 mt-3 justify-content-lg-start">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-save"></i>
                    Save
                </button>
                <a class="btn btn-warning" 
                    asp-page="/Customers/Customer"
                    asp-route-customerId=@Model.EditCustomerVM.CustomerId>
                    <i class="fa-solid fa-arrow-left"></i>
                    Back
                </a>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
 }