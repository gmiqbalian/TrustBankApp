@page
@model TrustBankApp.Pages.Customers.EditCustomerModel
@{
}


<div class="container mt-5 pt-5">
    <div class="container mt-5 p-5 bg-dark text-light rounded-2" style="margin-bottom: 150px">
        <h1 class="fs-1 fw-bolder">Edit Customer</h1>
        <h5 class="pb-4 fw-bold text-warning">
            Customer Id: @Model.EditCustomerViewModel.CustomerId
        </h5>
        
        <form class="" style="padding-left: 20px" method="post">
            <div class="row">

                <div class="col-12 col-lg-6">
                    <div class="row col-12">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.GivenName"
                                   class="form-label">
                                First Name
                            </label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.EditCustomerViewModel.GivenName">
                            <span asp-validation-for="@Model.EditCustomerViewModel.GivenName"></span>
                        </div>
                        <div class="mb-3 col-12">
                            <label for="exampleInputPassword1" class="form-label">Last Name</label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.EditCustomerViewModel.SurName">
                            <span asp-validation-for="@Model.EditCustomerViewModel.SurName"></span>
                        </div>
                    </div>

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.NationalId"
                                   class="form-label">
                                Social Security
                            </label>
                            <input type="text" class="form-control" id="exampleInputEmail1"
                                   asp-for="@Model.EditCustomerViewModel.NationalId"
                                   aria-describedby="emailHelp">
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.Gender"
                                   class="form-label">Gender</label>
                            <select type="text" class="form-control text-dark" id="gender"
                                    asp-for="@Model.EditCustomerViewModel.Gender"
                                    asp-items="@Model.EditCustomerViewModel.GendersDropDownList">
                            </select>
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.Birthday" class="form-label">Birthday</label>
                            <input type="date" class="form-control" id="dateOfBirth"
                                   asp-for="@Model.EditCustomerViewModel.Birthday">
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6">

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.StreetAddress" class="form-label">Address</label>
                            <input type="text" class="form-control" placeholder="1234 Main St"
                                   asp-for="@Model.EditCustomerViewModel.StreetAddress">
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.City"
                                   class="form-label">City</label>
                            <input type="text" class="form-control"
                                   asp-for="@Model.EditCustomerViewModel.City">
                        </div>
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.Country" class="form-label">Country</label>
                            <Select type="text" class="form-control"
                                    asp-for="@Model.EditCustomerViewModel.Country"
                                    asp-items="@Model.EditCustomerViewModel.CountriesDropDownList">
                            </Select>
                        </div>
                        <div class="mb-3 col-12 col-lg-6">
                            <label asp-for="@Model.EditCustomerViewModel.ZipCode" class="form-label">Zip</label>
                            <input type="text" class="form-control" placeholder="000 00"
                                   asp-for="@Model.EditCustomerViewModel.ZipCode">
                        </div>
                        <div class="mb-3 col-12 col-lg-6">
                            <label asp-for="@Model.EditCustomerViewModel.TelephoneNumber" class="form-label">Tel Number</label>
                            <input type="text" class="form-control" placeholder="1234 56 78"
                                   asp-for="@Model.EditCustomerViewModel.TelephoneNumber">
                        </div>
                    </div>

                    <div class="col-12 row">
                        <div class="mb-3 col-12">
                            <label asp-for="@Model.EditCustomerViewModel.EmailAddress" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail"
                                   asp-for="@Model.EditCustomerViewModel.EmailAddress">
                        </div>
                    </div>
                </div>

            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-save"></i>
                Update
            </button>
            <button class="btn btn-primary" 
                asp-page="/Customers/Customer"
                asp-route-customerId="@Model.EditCustomerViewModel.CustomerId">
                <i class="fa-solid fa-arrow-left"></i>
                Back
            </button>
        </form>
    </div>
</div>


@section scripts {
    <partial name="_ValidationScriptsPartial" />
 }