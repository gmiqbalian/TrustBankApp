@page
@model TrustBankApp.Pages.TopTenAccounts.TopTenAccountsModel
@{
}

<div class="container mt-5 pt-5 d-flex flex-column gap-3 mb-5">
    <div class="section-title border border-danger">
        <h1 class="fw-bolder text-success">Top Ten Accounts By Country: @Model.Country</h1>
        <p class="fs-6 lh-1 fst-italic text-muted">Last updated: @DateTime.Now</p>
    </div>
    <div class="table-responsive border border-danger">
        <table class="table table-dark table-striped p-0 m-0">
            <thead>
                <tr>
                    <th scope="col">Customer Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Social Security</th>
                    <th scope="col">Email</th>
                    <th scope="col">Account</th>
                    <th scope="col">Balance</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (var account in Model.TopTenAccounts)
                {
                    <tr>
                        <td>@account.CustomerId</td>
                        <td>@account.Name</td>
                        <td>@account.NationalId</td>
                        <td>@account.Email</td>
                        <td>@account.AccountId</td>
                        <td>@account.Balance</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>