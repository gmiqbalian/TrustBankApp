@page
@model TrustBankApp.Pages.Accounts.TransactionsModel
@{
}

<div class="container mt-5 pt-5 d-flex flex-column gap-3">
    <div class="section-title border border-danger">
        <h1>All Transactions</h1>
        <h3>Total Records: @Model.Transactions.TotalRows</h3>
    </div>
    <div class="d-flex justify-content-between border border-danger" style="border: 1px solid green;">
        <form class=" d-flex align-items-center" method="get">
            <div class="input-group">
                <div class="form-outline">
                    <input type="search" id="form1" class="form-control h-100"
                           asp-for="@Model.SearchText" placeholder="" />
                    <input type="hidden" asp-for="@Model.Transactions" />
                </div>

                <button type="submit" class="btn btn-primary p-2">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            @*<input type="text" placeholder="enter number of records per page" asp-for-pageSize="">*@
        </form>
        <div>
            <a class="btn btn-warning border-2 border-dark px-3 rounded-4" 
                asp-page="/Index">
                <i class="fa-solid fa-arrow-left"></i>
                Back
            </a>
            <a class="btn btn-success border-2 border-dark px-3 rounded-4" 
                asp-page="/Customers/CreateCustomer">
                <i class="fa-solid fa-plus fa-lg"></i>
                Create New
            </a>
        </div>
    </div>
    <div class="table-responsive border border-danger">
        <table class="table table-dark table-striped p-0 m-0">
            <thead>
                <tr>
                    <th scope="col">
                        Serial
                    </th>
                    <th scope="col">
                        Transaction Id
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-searchText="@Model.SearchText"
                           asp-route-pageNo = "@Model.CurrentPageNumber"
                           asp-route-sortColumn="transactionId"
                           asp-route-sortOrder="asc">
                            <i class="fa-solid fa-sort-up"></i>
                        </a>
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-pageNo = "@Model.CurrentPageNumber"
                           asp-route-searchText="@Model.SearchText"
                           asp-route-sortColumn="transactionId"
                           asp-route-sortOrder="desc">
                            <i class="fa-solid fa-sort-down"></i>
                        </a>
                    </th>
                    <th scope="col">
                        Date
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-pageNo = "@Model.CurrentPageNumber"
                           asp-route-sortColumn="Date"
                           asp-route-sortOrder="asc">
                            <i class="fa-solid fa-sort-up"></i>
                        </a>
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-pageNo = "@Model.CurrentPageNumber"
                           asp-route-sortColumn="Date"
                           asp-route-sortOrder="desc">
                            <i class="fa-solid fa-sort-down"></i>
                        </a>
                    </th>
                    <th scope="col">
                        Type
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-searchText="@Model.SearchText"
                           asp-route-sortColumn="type"
                           asp-route-sortOrder="asc">
                            <i class="fa-solid fa-sort-up"></i>
                        </a>
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-sortColumn="type"
                           asp-route-sortOrder="desc">
                            <i class="fa-solid fa-sort-down"></i>
                        </a>
                    </th>
                    <th scope="col">
                        Amount
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-searchText="@Model.SearchText"
                           asp-route-sortColumn="amount"
                           asp-route-sortOrder="asc">
                            <i class="fa-solid fa-sort-up"></i>
                        </a>
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-sortColumn="amount"
                           asp-route-sortOrder="desc">
                            <i class="fa-solid fa-sort-down"></i>
                        </a>
                    </th>
                    <th scope="col">
                        Balance
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-searchText="@Model.SearchText"
                           asp-route-sortColumn="balance"
                           asp-route-sortOrder="asc">
                            <i class="fa-solid fa-sort-up"></i>
                        </a>
                        <a asp-page="/Accounts/Transactions"
                           asp-route-accountId="@Model.AccountId"
                           asp-route-sortColumn="balance"
                           asp-route-sortOrder="desc">
                            <i class="fa-solid fa-sort-down"></i>
                        </a>
                    </th>

                </tr>
            </thead>

            <tbody id="myTable" class="table-group-divider">


            </tbody>
        </table>
        <div class="mt-3">
            <a class="btn btn-primary" href="javascript:showMore();">Show More</a>
        </div>
    </div>

</div>


@section Scripts {
    <script>
        pageNo=1;
        serialNo=0;

        document.addEventListener("DOMContentLoaded", function(){
            showMore();
        })

        function showMore() {
            fetch("Transactions?handler=ShowMore&pageNo=" + pageNo + "&accountId=@Model.AccountId")
                .then((response) => response.json())
                .then((json) => {
                    pageNo = pageNo + 1
                    json.resultList.forEach(drawElements);
                });
        }

        function drawElements(element){
            serialNo += 1;
            document.getElementById('myTable').innerHTML += 
            `<tr>
                <td>${serialNo}</td>
                <td>${element.transactionId}</td>
                <td>${new Date(element.date).toLocaleDateString()}</td>
                <td>${element.type}</td>
                <td>${element.amount}</td>
                <td>${element.balance}</td>
            </tr>`
        }
    </script>
}