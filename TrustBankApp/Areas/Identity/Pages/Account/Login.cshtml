<h1 class="pt-5 text-center" style="margin-top: 100px; margin-bottom: 30px;">@ViewData["Title"]</h1>


<section class="vh-100 gradient-custom">
    <div class="container py-0 vh-100">
        <div class="row justify-content-center align-items-baseline h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration bg-dark" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5 gap-5">
                        <form id="account" method="post">
                            <h2>Use a local account to log in.</h2>
                            <hr />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <label asp-for="Input.Password" class="form-label"></label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div>
                                <div class="checkbox mb-3">
                                    <label asp-for="Input.RememberMe" class="form-label">
                                        <input class="form-check-input" asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div>
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-5">Log in</button>
                            </div>
                            <div class="lh-1 d-flex flex-column justify-content-center align-items-center">
                                <p>
                                    <i class="fa-solid fa-unlock-keyhole"></i>
                                    <a class="text-decoration-none" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                                <p>
                                    <i class="fa-solid fa-user"></i>
                                    <a class="text-decoration-none" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </p>
                                <p>
                                    <i class="fa-solid fa-envelope-circle-check"></i>
                                    <a class="text-decoration-none" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}