@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container py-5 w-50 mb-5">
    <h1>LOGIN</h1>
    <hr />
    <div class="customer-card rounded shadow-2 d-flex row p-3">
        <form id="account" method="post">
            <h2>Use a local account to log in.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-5">Log in</button>
            </div>
            <div class="lh-1 d-flex flex-column justify-content-center align-items-start">
                <p>
                    <i class="fa-solid fa-unlock-keyhole"></i>
                    <a class="text-decoration-none text-dark" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <i class="fa-solid fa-user"></i>
                    <a class="text-decoration-none text-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
                <p>
                    <i class="fa-solid fa-envelope-circle-check"></i>
                    <a class="text-decoration-none text-dark" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
